<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/help_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageview_help_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_app"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview_help_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_version"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <TextView
        android:id="@+id/textview_help_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/help_copyright"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <TextView
        android:id="@+id/textview_help_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/help_description"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_help_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/secondary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:layout_marginHorizontal="40dp"-->
<!--                android:textSize="16sp"-->
<!--                android:text="@string/help_contact_title"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/primary_color">-->

<!--            </TextView>-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_fendy"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="16sp"
                    android:text="@string/help_mail_fendyanto"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="20dp">

                </TextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_johanes"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="16sp"
                    android:text="@string/help_mail_johanes"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="20dp">

                </TextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_kosasi"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="16sp"
                    android:text="@string/help_mail_kosasi"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="20dp">

                </TextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_michelle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="16sp"
                    android:text="@string/help_mail_michelle"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="20dp">

                </TextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="16sp"
                    android:text="@string/help_phone_number"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:drawablePadding="20dp">

                </TextView>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:text="@string/help_source_description"
                android:gravity="center"
                android:textColor="@color/primary_color"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">
                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/help_source_link"
                        android:layout_gravity="center"
                        android:textColor="@color/accent_color"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>