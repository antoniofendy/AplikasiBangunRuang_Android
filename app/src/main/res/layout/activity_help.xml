<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/help_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageview_help_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_app"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview_help_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi x"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <TextView
        android:id="@+id/textview_help_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Copyright Â©Kelompok 15"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <TextView
        android:id="@+id/textview_help_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Dibuat oleh kelompok 15 sebagai tugas UTS Pemrograman Mobile"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_color"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_help_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/secondary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_fendy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <ImageView
                        android:id="@+id/imageview_help_contact_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:text="Fendyanto"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_johanes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <ImageView
                        android:id="@+id/imageview_help_contact_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:text="Johanes Shane"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_kosasi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <ImageView
                        android:id="@+id/imageview_help_contact_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:text="Kosasi"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_michelle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <ImageView
                        android:id="@+id/imageview_help_contact_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:text="Michelle Wong"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <ImageView
                        android:id="@+id/imageview_help_contact_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_baseline_local_phone_24"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:text="081234567890"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:text="Source code aplikasi ini tersedia di GitHub."
                android:gravity="center"
                android:textColor="@color/primary"/>

<!--            <com.google.android.material.card.MaterialCardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:layout_marginHorizontal="24dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:clickable="true"-->
<!--                android:text="https://bit.ly/BangunRuangAppSource"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/primary"/>-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help_contact_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_color">
                    <TextView
                        android:id="@+id/textview_help_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="https://bit.ly/BangunRuangAppSource"
                        android:layout_gravity="center"
                        android:textColor="@color/accent"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>